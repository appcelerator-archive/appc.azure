{
  "name": "appc.azure",
  "version": "1.2.0",
  "description": "Provides access to Azure Storage Tables",
  "author": {
    "email": "support@axway.com",
    "name": "Axway R&D",
    "url": "https://axway.com"
  },
  "main": "dist/index.js",
  "license": "Apache-2.0",
  "framework": "none",
  "keywords": [
    "arrow",
    "arrow-connector",
    "appcelerator",
    "azure"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/appcelerator/appc.azure"
  },
  "files": [
    "dist"
  ],
  "private": true,
  "dependencies": {
    "async": "^2.5.0",
    "azure": "~1.2.0-preview",
    "azure-storage": "^2.2.1",
    "lodash": "^4.17.4",
    "node-uuid": "^1.4.1",
    "pkginfo": "^0.4.0",
    "semver": "^5.0.3"
  },
  "devDependencies": {
    "arrow": "^*",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.0.0",
    "babel-istanbul": "^0.12.1",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.0.15",
    "babel-preset-stage-2": "^6.22.0",
    "grunt": "^1.0.1",
    "grunt-mocha-test": "^0.13.2",
    "mocha": "^3.4.2",
    "mockery": "2.1.0",
    "nodemon": "^1.3.8",
    "nyc": "11.0.3",
    "request": "^2.55.0",
    "nsp": "3.1.0",
    "retire": "1.4.0",
    "rimraf": "2.6.1",
    "should": "^11.2.1",
    "sinon": "2.3.8",
    "standard": "10.0.2",
    "tap": "10.7.0"
  },
  "scripts": {
    "start": "appc run",
    "build": "npm run clean && npm run build:dev && npm run security",
    "build:dev": "npm run build:dist",
    "build:dist": "babel -d ./dist ./lib",
    "lint": "standard --fix",
    "security": "npm run security:retire && npm run security:nsp",
    "security:retire": "retire --exitwith 0 --package --jspath ./dist --nodepath ./ --outputformat json --outputpath scan-retire.json",
    "security:nsp": "nsp check --reporter json > scan-nsp.json --warn-only",
    "clean": "rm -rf ./tmp && rm -rf dist/* coverage/*",
    "test": "npm run clean && npm run test:unit",
    "test:coverage": "nyc check-coverage --lines 90 --functions 90 --branches 70 --statements 90",
    "test:unit": "tap ./test/unit/* --color --bail --coverage --coverage-report=html && npm run test:coverage",
    "test:integration": "grunt"
  },
  "standard": {
    "ignore": [
      "test/integration/**"
    ]
  }
}
