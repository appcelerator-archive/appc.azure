{
  "name": "appc.azure",
  "description": "Provides access to Azure Storage Tables",
  "version": "1.2.0",
  "author": "Dawson Toth",
  "maintainers": [
    "Dawson Toth <dtoth@appcelerator.com>"
  ],
  "license": "Apache-2.0",
  "framework": "none",
  "keywords": [
    "arrow",
    "arrow-connector",
    "appcelerator",
    "azure"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/appcelerator/appc.azure"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "private": true,
  "dependencies": {
    "async": "^2.5.0",
    "azure": "^2.0.0-preview",
    "azure-storage": "^2.2.1",
    "lodash": "^4.17.4",
    "node-uuid": "^1.4.1",
    "pkginfo": "^0.4.0",
    "semver": "^5.0.3"
  },
  "devDependencies": {
    "arrow": "^*",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.0.0",
    "babel-istanbul": "^0.12.1",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.0.15",
    "babel-preset-stage-2": "^6.22.0",
    "cross-env": "^4.0.0",
    "grunt": "^1.0.1",
    "grunt-mocha-test": "^0.13.2",
    "mocha": "^3.4.2",
    "mockery": "2.1.0",
    "nodemon": "^1.3.8",
    "nsp": "2.6.3",
    "nyc": "11.0.3",
    "request": "^2.55.0",
    "retire": "1.3.3",
    "rimraf": "2.6.1",
    "should": "^11.2.1",
    "sinon": "2.3.7",
    "standard": "10.0.2",
    "tap": "10.7.0"
  },
  "scripts": {
    "start": "appc run",
    "build": "npm run clean && npm run build:dev && npm run security",
    "build:dev": "npm run build:dist",
    "build:dist": "babel -d ./dist ./lib",
    "lint": "standard --fix",
    "security": "retire --exitwith 0 --outputpath scan-retire.json && nsp check --output json > scan-nsp.json",
    "clean": "rimraf ./tmp && rimraf dist/* coverage/*",
    "test": "npm run security && npm run test:unit && npm run clean",
    "test:coverage": "nyc check-coverage --lines 90 --functions 90 --branches 70 --statements 90",
    "test:unit": "cross-env NODE_ENV=test babel-node node_modules/babel-istanbul/lib/cli.js cover node_modules/.bin/tap --compilers babel-core/register ./test/unit/* --recursive -R spec --color --bail --coverage --coverage-report=html && npm run test:coverage",
    "test:integration": "grunt"
  },
  "standard": {
    "ignore": [
      "test/integration/**"
    ]
  }
}
